{
  "name": "install",
  "private": true,
  "version": "0.0.170",
  "description": "Command-line tool to recursively run npm i or npm ci on a subfolder",
  "main": "./dist/index.js",
  "scripts": {
    "bundle": "ncc build src/index.ts -o ../../pkgs/install",
    "fix-newlines": "crlf --set=LF ../../pkgs/install/index.js",
    "postbundle": "npm run fix-newlines && npm run debug-bundle",
    "debug-bundle": "(echo === BEGIN BUNDLE ===) && cat ../../pkgs/install/index.js && (echo === END BUNDLE ===)",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Dave Herman <david.herman@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "execa": "^7.1.1"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.3",
    "@types/node": "^18.15.11",
    "@vercel/ncc": "^0.36.1",
    "crlf": "^1.1.1",
    "typescript": "^5.0.4"
  }
}
